{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "src",
    "dist",
    "node_modules"
  ]
}